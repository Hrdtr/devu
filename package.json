{
  "name": "devu-monorepo",
  "type": "module",
  "version": "1.0.0-alpha.10",
  "private": true,
  "scripts": {
    "dev": "bun run --filter './apps/**' dev",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "postinstall": "husky",
    "prepare": "bun run scripts/init/sidecar.bun.ts && bun run scripts/init/resource.api.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@types/adm-zip": "^0.5.7",
    "@types/bun": "^1.2.15",
    "@types/semver": "^7.7.0",
    "adm-zip": "^0.5.16",
    "commitlint": "^19.8.1",
    "eslint": "^9.27.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "semver": "^7.7.2",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "devu",
    "devu-api",
    "esbuild",
    "onnxruntime-node",
    "protobufjs",
    "unrs-resolver",
    "vue-demi"
  ]
}
